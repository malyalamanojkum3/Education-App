<mvc:View xmlns:f="sap.f" xmlns:table="sap.ui.table" controllerName="loanapp.controller.AdminAppliedLoans"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">

    <VBox id="_IDGenVBox" class="pageContainer" fitContainer="true">
        <ScrollContainer id="scrollContainer" height="100%" width="100%" vertical="true" visible="true">
        <Toolbar id="_IDGenToolbar" height="2rem" class="mainToolBar">
            <ToolbarSpacer id="_IDGenToolbarSpacer1"/>
            <HBox id="centeredTitles" class="centeredTitles">
                <Title id="appliedLoansTitle" text="Applied Loans" class="title" />
            </HBox>
            <ToolbarSpacer id="_IDGenToolbarSpacer2" />
        </Toolbar>
        
            <Table id="loanList" items="{mainModel>/customerSet}" class="table">
                <columns>
                    <Column id="_IDGenColumn">
                        <Text id="_IDGenText" text="ID" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText1" text="Applicant Name" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn11">
                        <Text id="_IDGenText112" text="Applicant Address" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn111">
                        <Text id="_IDGenText1111" text="Applicant MobileNo" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn3" hAlign="Center">
                        <Text id="_IDGenText3" text="Actions" class="action font1"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text id="_IDGenText4" text="{mainModel>Id}" />
                            <Text id="_IDGenText5" text="{mainModel>applicantName}" />
                            <Text id="_IDGenText6" text="{mainModel>applicantAddress}" />
                            <Text id="_IDGenText77" text="{mainModel>applicantPHno}"/>
                            <HBox id="_IDGenHBox" class="action">
                                <Link id="_IDGenLink" text="View"  class="view" press="onViewDetails" />
                                <Link id="_IDGenLink1" text="Approve" class="approve" press="onApproveLoan" />
                                <Link id="_IDGenLink2" text="Reject" class="reject" press="onRejectLoan" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
    </VBox>
    <Dialog id="customerDetailsDialog" title="Customer Details" class="customerDetails">
        <content>
            <VBox id="_IDGenVBox1">
            <HBox id="_IDGenHBox21" class="customerDetails">
                    <Label id="_IDGenLabel21" text="ID:" design="Bold" class="font" />
                    <Text id="_IDGenText71" text="{mainModel>Id}" class="font"/>
                </HBox>
                <HBox id="_IDGenHBox211" class="customerDetails">
                    <Label id="_IDGenLabel11" text="Applicant Name:" design="Bold" class="font" />
                    <Text id="_IDGenText711" text="{mainModel>applicantName}" class="font"/>
                </HBox>
                <HBox id="_IDGenHBox2" class="customerDetails">
                    <Label id="_IDGenLabel" text="Applicant Address:" design="Bold" class="font"/>
                    <Text id="_IDGenText7" text="{mainModel>applicantAddress}" class="font" />
                </HBox>
                <HBox id="_IDGenHBox3" class="customerDetails">
                    <Label id="_IDGenLabel1" text="Applicant Mobile:" design="Bold" class="font" />
                    <Text id="_IDGenText8" text="{mainModel>applicantPHno}" class="font" />
                </HBox>
                <HBox id="_IDGenHBox4" class="customerDetails">
                    <Label id="_IDGenLabel2" text="Applicant Email:" design="Bold" class="font"/>
                    <Text id="_IDGenText9" text="{mainModel>applicantEmail}" class="font"/>
                </HBox>
                <HBox id="_IDGenHBox5" class="customerDetails">
                    <Label id="_IDGenLabel3" text="Applicant Aadhar:" design="Bold" class="font" />
                    <Text id="_IDGenText10" text="{mainModel>applicantAadhar}" class="font"/>
                </HBox>
                <HBox id="_IDGenHBox6" class="customerDetails">
                    <Label id="_IDGenLabel4" text="Applicant PAN:" design="Bold" class="font" />
                    <Text id="_IDGenText11" text="{mainModel>applicantPAN}" class="font"/>
                </HBox>
                <HBox id="_IDGenHBox7" class="customerDetails">
                    <Label id="_IDGenLabel5" text="Applicant Salary:" design="Bold" class="font"/>
                    <Text id="_IDGenText12" text="{mainModel>applicantSalary}" class="font" />
                </HBox>
                <HBox id="_IDGenHBox8" class="customerDetails">
                    <Label id="_IDGenLabel6" text="Loan Amount:" design="Bold" class="font" />
                    <Text id="_IDGenText13" text="{mainModel>loanAmount}" class="font"/>
                </HBox>
                <HBox id="_IDGenHBox9" class="customerDetails">
                    <Label id="_IDGenLabel7" text="Loan Repayment Months:" design="Bold" class="font"/>
                    <Text id="_IDGenText14" text="{mainModel>loanRepaymentMonths}" class="font" />
                </HBox>
            </VBox>
        </content>
        <endButton>
            <Button id="_IDGenButton" text="Close" press="onCloseDialog" />
        </endButton>
    </Dialog>
</mvc:View>
