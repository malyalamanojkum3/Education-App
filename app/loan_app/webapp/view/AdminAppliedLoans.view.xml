<mvc:View xmlns:f="sap.f" xmlns:table="sap.ui.table" controllerName="loanapp.controller.AdminAppliedLoans"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Page id ="appliedLoans" showHeader="true" enableScrolling="true" class="customPage">
    <customHeader>
      <Bar design="Header" class="box">
      <contentLeft>
      <Button  text="Home" press="onHome" class="mybuttonspacing"></Button>
      </contentLeft>
        <contentMiddle>
        <Title text="Education Loan" class="headerTitleCentered" />
        </contentMiddle>
        <contentRight>
          <Button  text="Logout" press="onLogout" class="mybuttonspacing" />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
    <Bar>
    <contentLeft >
    <Text text="Applied Loans" class="subHeader" />
    </contentLeft>
    <contentRight>
    <OverflowToolbar id="filtersbar">
						<ToolbarSpacer/>
						<SearchField id ="querySearch" liveChange="onSearch">
							<layoutData>
							<OverflowToolbarLayoutData maxWidth="300px" shrinkable="true" priority="NeverOverflow"/></layoutData>
						</SearchField>
						<Button text="Reset" type="Transparent" press="onReset"/>
						<OverflowToolbarButton tooltip="Sort" type="Transparent" text="Sort" icon="sap-icon://sort" press="onSort"/>
						<OverflowToolbarButton tooltip="Group" type="Transparent" text="Group" icon="sap-icon://group-2" press="onGroup"/>
						<OverflowToolbarMenuButton tooltip="Export" type="Transparent" text="Export" buttonMode="Split" icon="sap-icon://share" defaultAction="onDefaultActionAccept" beforeMenuOpen="onBeforeMenuOpen" useDefaultActionOnly="true">
							<menu>
								<Menu itemSelected="onMenuAction">
									<MenuItem text="Export as PDF" icon="sap-icon://pdf-attachment" />
									<MenuItem text="Export to Excel" icon="sap-icon://excel-attachment" />
								</Menu>
							</menu>
						</OverflowToolbarMenuButton>
					</OverflowToolbar>
    </contentRight>
    </Bar>
    
    </content>
    <VBox id="_IDGenVBox" class="pageContainer" fitContainer="true">
        <ScrollContainer id="scrollContainer" height="100%" width="100%" vertical="true" visible="true">
            <Table id="loanList" items="{/customer}" class="table">
                <columns>
                    <Column id="_IDGenColumn">
                        <Text id="_IDGenText" text="ID" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText1" text="Applicant Name" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn11">
                        <Text id="_IDGenText112" text="Applicant Address" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn111">
                        <Text id="_IDGenText1111" text="Applicant MobileNo" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn3" hAlign="Center">
                        <Text id="_IDGenText3" text="Actions" class="action font1"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text id="_IDGenText4" text="{Id}" />
                            <Text id="_IDGenText5" text="{applicantName}" />
                            <Text id="_IDGenText6" text="{applicantAddress}" />
                            <Text id="_IDGenText77" text="{applicantPHno}"/>
                            <HBox id="_IDGenHBox" class="action">
            
                                <Button type="Default" text="View" press="onViewDetails" class="actionbuttonspacing"/>
                                 <Button type="Accept" text="Accept" press="onApproveLoan" class="actionbuttonspacing"/>
                                 <Button type="Reject" text="Reject" press="onRejectLoan" class="actionbuttonspacing"/>
                        
    
                               
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
    </VBox>
    </Page>
     <Dialog id="customerDetailsDialog" title="CUSTOMER DETAILS" >
        <content>
        <HBox class="customerDetails">
            <VBox>
                    <Label text="ID:" design="Bold" class="font" />
                    <Text text="{Id}" class="font"/>
                    <Label  text="Applicant Name:" design="Bold" class="font" />
                    <Text text="{applicantName}" class="font"/>
                
            
                    <Label  text="Applicant Address:" design="Bold" class="font"/>
                    <Text  text="{applicantAddress}" class="font" />
               
                    <Label text="Applicant Mobile:" design="Bold" class="font" />
                    <Text text="{applicantPHno}" class="font" />
                
                    <Label  text="Applicant Email:" design="Bold" class="font"/>
                    <Text  text="{applicantEmail}" class="font"/>
              
                    <Label text="Applicant Aadhar:" design="Bold" class="font" />
                    <Text text="{applicantAadhar}" class="font"/>
                
                    <Label text="Applicant PAN:" design="Bold" class="font" />
                    <Text text="{applicantPAN}" class="font"/>
                
                    <Label text="Applicant Salary:" design="Bold" class="font"/>
                    <Text text="{applicantSalary}" class="font" />
                
                    <Label text="Loan Repayment Months:" design="Bold" class="font"/>
                    <Text text="{loanRepaymentMonths}" class="font" />
              
                    <Label text="Loan Amount:" design="Bold" class="font" />
                    <Text text="{loanAmount}" class="font"/>
                
                </VBox>
                </HBox>
                
        </content>
        <endButton>
            <Button id="_IDGenButton" text="Close" press="onCloseDialog" />
        </endButton>
    </Dialog>
</mvc:View>
