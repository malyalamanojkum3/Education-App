<mvc:View xmlns:f="sap.f" xmlns:table="sap.ui.table" controllerName="loanapp.controller.AdminAppliedLoans"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Page id ="appliedLoans" showHeader="true" enableScrolling="true" class="customPage">
    <customHeader>
      <Bar design="Header" class="box">
      <contentLeft>
      <Button  text="Home" press="onHome" class="mybuttonspacing"></Button>
      </contentLeft>
        <contentMiddle>
        <Title text="Education Loan" class="headerTitleCentered" />
        </contentMiddle>
        <contentRight>
          <Button  text="Logout" press="onLogout" class="mybuttonspacing" />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
    <Bar>
    <contentLeft >
    <Text text="Applied Loans" class="subHeader" />
    </contentLeft>
    </Bar>
    </content>
    <VBox id="_IDGenVBox" class="pageContainer" fitContainer="true">
        <ScrollContainer id="scrollContainer" height="100%" width="100%" vertical="true" visible="true">
            <Table id="loanList" items="{mainModel>/customer}" class="table">
                <columns>
                    <Column id="_IDGenColumn">
                        <Text id="_IDGenText" text="ID" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText1" text="Applicant Name" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn11">
                        <Text id="_IDGenText112" text="Applicant Address" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn111">
                        <Text id="_IDGenText1111" text="Applicant MobileNo" class="font1"/>
                    </Column>
                    <Column id="_IDGenColumn3" hAlign="Center">
                        <Text id="_IDGenText3" text="Actions" class="action font1"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text id="_IDGenText4" text="{mainModel>Id}" />
                            <Text id="_IDGenText5" text="{mainModel>applicantName}" />
                            <Text id="_IDGenText6" text="{mainModel>applicantAddress}" />
                            <Text id="_IDGenText77" text="{mainModel>applicantPHno}"/>
                            <HBox id="_IDGenHBox" class="action">
                                <Link id="_IDGenLink" text="View"  class="view" press="onViewDetails" />
                                <Link id="_IDGenLink1" text="Approve" class="approve" press="onApproveLoan" />
                                <Link id="_IDGenLink2" text="Reject" class="reject" press="onRejectLoan" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
    </VBox>
    </Page>
    <Dialog id="customerDetailsDialog" title="CUSTOMER DETAILS" >
        <content>
        <HBox>
            <VBox>
            <HBox class="customerDetails">
                    <Label text="ID:" design="Bold" class="font" />
                    <Text text="{mainModel>Id}" class="font"/>
                </HBox>
                <HBox  class="customerDetails">
                    <Label  text="Applicant Name:" design="Bold" class="font" />
                    <Text text="{mainModel>applicantName}" class="font"/>
                </HBox>
                </VBox>
                <VBox>
                <HBox  class="customerDetails">
                    <Label  text="Applicant Address:" design="Bold" class="font"/>
                    <Text  text="{mainModel>applicantAddress}" class="font" />
                </HBox>
                <HBox class="customerDetails">
                    <Label text="Applicant Mobile:" design="Bold" class="font" />
                    <Text text="{mainModel>applicantPHno}" class="font" />
                </HBox>
                </VBox>
                <VBox>
                <HBox  class="customerDetails">
                    <Label  text="Applicant Email:" design="Bold" class="font"/>
                    <Text  text="{mainModel>applicantEmail}" class="font"/>
                </HBox>
                <HBox class="customerDetails">
                    <Label text="Applicant Aadhar:" design="Bold" class="font" />
                    <Text text="{mainModel>applicantAadhar}" class="font"/>
                </HBox>
                </VBox>
                <VBox>
                <HBox class="customerDetails">
                    <Label text="Applicant PAN:" design="Bold" class="font" />
                    <Text text="{mainModel>applicantPAN}" class="font"/>
                </HBox>
                <HBox class="customerDetails">
                    <Label text="Applicant Salary:" design="Bold" class="font"/>
                    <Text text="{mainModel>applicantSalary}" class="font" />
                </HBox>
                </VBox>
                <VBox>
                <HBox class="customerDetails">
                    <Label text="Loan Repayment Months:" design="Bold" class="font"/>
                    <Text text="{mainModel>loanRepaymentMonths}" class="font" />
                </HBox>
                <HBox class="customerDetails">
                    <Label text="Loan Amount:" design="Bold" class="font" />
                    <Text text="{mainModel>loanAmount}" class="font"/>
                </HBox>
                </VBox>
                </HBox>
        </content>
        <endButton>
            <Button id="_IDGenButton" text="Close" press="onCloseDialog" />
        </endButton>
    </Dialog>
</mvc:View>
