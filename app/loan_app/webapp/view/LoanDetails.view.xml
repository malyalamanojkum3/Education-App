<mvc:View xmlns:f="sap.f" xmlns:table="sap.ui.table" controllerName="loanapp.controller.LoanDetails"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
     <Page id ="loanDetailsPage" showHeader="true" enableScrolling="true" class="customPage">
    <customHeader>
      <Bar design="Header" class="box">
      <contentLeft>
      <Button  text="Home" press="onHome" class="mybuttonspacing"></Button>
      </contentLeft>
        <contentMiddle>
        <Title text="Education Loan" class="headerTitleCentered" />
        </contentMiddle>
        <contentRight>
          <Button  text="Logout" press="onLogout" class="mybuttonspacing" />
        </contentRight>
      </Bar>
    </customHeader>
    <content>
    <Bar>
    <contentLeft >
    <Text text="Loan Details" class="subHeader" />
    </contentLeft>
    </Bar>
    </content>
      <VBox  class="pageContainer" fitContainer="true">
        <ScrollContainer id="scrollContainer1" height="100%" width="100%" vertical="true" visible="true">
        
            <Table id="loanDetails" items="{mainModel>/customerSet}" class="table">
                <columns>
                    <Column>
                    </Column>
                    <Column >
                    </Column>
                    <Column  >
                    </Column>
                </columns>
                <items>
                    <ColumnListItem class="spacedItem">
                        <cells>
                        <VBox class="gridRow">
                        <HBox  >
                            <Label  text="ID:" design="Bold" class="gridLabel"/>
                            <Text  text="{mainModel>Id}" class="gridLabel style"/>
                            </HBox>
                        <HBox>
                            <Label text="Applicant Name:" design="Bold" class="gridLabel"/>
                            <Text text="{mainModel>applicantName}" class="gridLabel"/>
                            </HBox>
                            <HBox >
                            <Label text="Applicant Address:" design="Bold" class="gridLabel"/>
                            <Text text="{mainModel>applicantAddress}" class="gridLabel style"/>
                            </HBox>
                            <HBox >
                            <Label  text="Applicant Mobile:" design="Bold" class="gridLabel"/>
                            <Text text="{mainModel>applicantPHno}" class="gridLabel style"/>
                            </HBox>
                        <HBox >
                            <Label  text="Applicant Email:" design="Bold" class="gridLabel"/>
                            <Text  text="{mainModel>applicantEmail}" class="gridLabel "/>
                        </HBox>
                            </VBox>

                        <VBox class="gridRow" >
                        
                        <HBox >
                            <Label text="Applicant Aadhar:" design="Bold" class="gridLabel"/>
                            <Text  text="{mainModel>applicantAadhar}" class="gridLabel style"/>
                        </HBox>
                        <HBox >
                            <Label text="Applicant PAN:" design="Bold" class="gridLabel"/>
                            <Text text="{mainModel>applicantPAN}" class="gridLabel style"/>
                            </HBox>
                        <HBox>
                            <Label text="Applicant Salary:"  design="Bold" class="gridLabel"/>
                            <Text  text="{mainModel>applicantSalary}" class="gridLabel"/>
                        </HBox>
                        <HBox>
                            <Label text="Loan Amount:" design="Bold" class="gridLabel"/>
                            <Text text="{mainModel>loanAmount}" class="gridLabel style"/>
                        </HBox>
                        <HBox>
                            <Label  text="Repayment Months:" design="Bold" class="gridLabel"/>
                            <Text  text="{mainModel>loanRepaymentMonths}" class="gridLabel style"/>
                        </HBox>
                        </VBox>
                        <VBox>
                        <HBox>
                        <Text text="{mainModel>loanStatus}" class="gridLabel style"/>
                        </HBox>
                        </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </ScrollContainer>
    </VBox>
    </Page>
</mvc:View>
