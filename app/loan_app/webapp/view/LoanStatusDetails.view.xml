<mvc:View controllerName="loanapp.controller.LoanStatusDetails"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="LoanStatusDetailsPage" title="Loan Details" showNavButton="true" navButtonPress="onNavBack">
        <VBox class="sapUiSmallMargin">
            <f:Form id="LoanDetailsForm" editable="false">
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12" columnsXL="2" columnsL="2" columnsM="2"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="ID">
                                <f:fields>
                                    <Text text="{mainModel>Id}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Loan Status">
                                <f:fields>
                                    <Text text="{mainModel>loanStatus}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Applicant Name">
                                <f:fields>
                                    <Text text="{mainModel>applicantName}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Applicant Address">
                                <f:fields>
                                    <Text text="{mainModel>applicantAddress}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Applicant Phone Number">
                                <f:fields>
                                    <Text text="{mainModel>applicantPHno}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Applicant Email">
                                <f:fields>
                                    <Text text="{mainModel>applicantEmail}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Applicant Aadhar Number">
                                <f:fields>
                                    <Text text="{mainModel>applicantAadhar}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Applicant PAN Number">
                                <f:fields>
                                    <Text text="{mainModel>applicantPAN}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Applicant Salary">
                                <f:fields>
                                    <Text text="{mainModel>applicantSalary}"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Loan Amount">
                                <f:fields>
                                    <Text text="{mainModel>loanAmount}"/>
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </VBox>
    </Page>
</mvc:View>